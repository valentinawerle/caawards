---
import Kick from "@/icons/sponsors/Kick.astro";
import Stake from "@/icons/sponsors/Stake.astro";
import Speed from "@/icons/sponsors/Speed.astro";
import { getTranslateLabels } from "@/i18n/utils";

const translateLabels = getTranslateLabels(Astro.currentLocale || "es");
---

<section class="flex flex-1 flex-col items-center justify-center">
  <h2
    class="font-bold text-center font-Inter text-primary text-2xl md:text-5xl"
  >
    {translateLabels("sponsors.title")}.
  </h2>
  <div class="flex md:flex-row flex-col items-center gap-20 mt-20 z-10">
    <div class="group transition transform">
      <Kick
        alt="Kick"
        class:list={[
          "sponsors-class",
          "group-hover:drop-shadow-[0_0_20px_rgba(0,255,0,0.7)]",
        ]}
      />
    </div>
    <div class="group transition transform">
      <Stake
        alt="Stake"
        class:list={[
          "sponsors-class",
          "group-hover:drop-shadow-[0_0_20px_rgba(255,255,255,0.7)]",
        ]}
      />
    </div>
    <div class="group transition transform">
      <Speed
        alt="Speed"
        class:list={[
          "sponsors-class",
          "group-hover:drop-shadow-[0_0_20px_rgba(255,255,0,0.7)]",
        ]}
      />
    </div>
  </div>
</section>
